<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestWallet">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/ecdsa_der_sample_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="ECDSA DER SAMPLE" />

        <Button
            android:id="@+id/sign_ecdsa_sample_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="SIGN PUF  ECDSA" />
        <Button
            android:id="@+id/sign_ecdsa_r1_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="SIGN R1 ECDSA" />
        <Button
            android:id="@+id/sign_ecdsa_k1_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="SIGN K1 ECDSA" />

        <Button
            android:id="@+id/make_address_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="MAKE ADDRESs" />

        <Button
            android:id="@+id/gen_csr_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="GEN CSR" />


        <TextView
            android:id="@+id/sample_result"
            android:layout_width="match_parent"
            android:layout_height="683dp"
            android:layout_gravity="center_horizontal"
            android:text="RESULT" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>